{
    "$schema": "https://opencode.ai/config.json",
    "mcp": {
        "context7": {
            "command": [
                "npx",
                "-y",
                "@upstash/context7-mcp@latest"
            ],
            "enabled": true,
            "type": "local"
        },
        "mcp-playwright": {
            "command": [
                "npx",
                "-y",
                "@executeautomation/playwright-mcp-server"
            ],
            "enabled": true,
            "environment": {},
            "type": "local"
        }
    },
    "provider": {
        "moonshot": {
            "models": {
                "kimi-k2-0711-preview": {}
            },
            "npm": "@ai-sdk/openai-compatible",
            "options": {
                "baseURL": "https://api.moonshot.ai/v1"
            }
        }
    }
}
